//add the example manifest data from the developer chrome site. This declares a browser action, 
//the activeTab permission which sees the URL of the current tab, 
//and the storage permission which remembers the user's choice of background color for a page. 

{
  "manifest_version": 2,

  "name": "Getting started example",
  "description": "This extension allows the user to change the background color of the current page.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "color-change-palette.png",
    "default_popup": "popup.html",
    "default_title": "Click here!" //sets a tool tip when hovering over the icon in the browser
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}